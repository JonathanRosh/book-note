<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Book</title>
    <link rel="stylesheet" href="/main.css" />
  </head>
  <body>
    <div class="page-wrapper">
      <%- include('partials/header.ejs') %>

      <main>
        <form action="/edit" method="POST" class="book-form">
          <h2>Edit Notes for "<%= book.book_name %>"</h2>

          <input type="hidden" name="id" value="<%= book.id %>" />

          <label for="notes">Your Notes:</label>
          <textarea id="notes" name="notes" rows="6" required>
            <%= book.notes || "" %></textarea
          >

          <label for="date_read">Date Read:</label>
          <input
            type="date"
            id="date_read"
            name="date_read"
            value="<%= book.date_read.split('-').reverse().join('-')   %>"
          />

          <label for="recommendation_rate">Recommendation (1-10):</label>
          <input
            type="number"
            id="recommendation_rate"
            name="recommendation_rate"
            min="1"
            max="10"
            value="<%= book.recommendation_rate || '' %>"
          />

          <button type="submit">Save Changes</button>
        </form>
      </main>

      <%- include('partials/footer.ejs') %>
    </div>
  </body>
</html>
